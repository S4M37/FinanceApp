<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/pull_to_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/market_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Market Sectoriel Indices -->

                <com.vayetek.financeapp.widgets.QuicksandTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:text="Sectoral Indices"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    app:font="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="6dp"
                                android:background="@color/colorAccent"
                                android:orientation="horizontal">

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="2"
                                    android:text="Indice"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Previous Close" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Last Close" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Variation" />

                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/market_sectoral_indices_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="4dp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:elevation="4dp"
                        android:paddingBottom="6dp">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/voir_all_sectoral_indices"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_action_more"
                            app:backgroundTint="@color/white" />
                    </LinearLayout>
                </RelativeLayout>


                <com.vayetek.financeapp.widgets.QuicksandTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:text="Market (Cotations En bourse)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    app:font="bold" />
                <!-- Market Data -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="6dp"
                                android:background="@color/colorAccent"
                                android:orientation="horizontal">

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="2"
                                    android:text="Name"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="open" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="vol title" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="vol TND" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="close" />

                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:alpha="0.5"
                                    android:background="@color/black" />

                                <com.vayetek.financeapp.widgets.QuicksandTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:gravity="center_horizontal"
                                    android:text="variation"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/market_data_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="4dp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:elevation="4dp"
                        android:paddingBottom="6dp">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/voir_all"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_action_more"
                            app:backgroundTint="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <com.vayetek.financeapp.widgets.QuicksandTextView
                    android:id="@+id/market_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    app:font="bold" />

                <!-- Market Performance Hausses -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.vayetek.financeapp.widgets.QuicksandTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Top Hausses"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/chart_hausses"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="6dp"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- Market Performance Baisses -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.vayetek.financeapp.widgets.QuicksandTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Top Baisses"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/chart_baisses"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- Market Performance Quantities -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.vayetek.financeapp.widgets.QuicksandTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Top Quantities"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/chart_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/colorAccent">

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Name"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/black" />

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Court"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/black" />

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="Variation"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/quantity_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- Market Performance Volumes -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.vayetek.financeapp.widgets.QuicksandTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Top Volumes"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/chart_volumes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="100dp"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/colorAccent">

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Name"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/black" />

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Court"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/black" />

                            <com.vayetek.financeapp.widgets.QuicksandTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="Variation"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/volumes_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/loading_layout" />

</RelativeLayout>